<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-4">
            <h1 class="text-center">Criar conta & Fazer login</h1>
            <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

            <%- include('includes/messages'); %>

            <div class="row">

                <div class="col-lg mb-5 mt-5">
                    <h4>Cadastro</h4>
                    <p>Se voce ainda não possui uma conta preencha o formulário abaixo.</p>
                    <form action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                          <label>Seu e-mail:</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Sua senha:</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-dark">Cadastrar</button>
                      </form>
                </div>

                <div class="col-lg mb-5 mt-5">
                    <h4>Login</h4>
                    <p>Se voce ja tem uma conta faça login abaixo.</p>
                    <br>
                    <form action="/login/login" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                          <label>Seu e=mail</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Sua senha</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-dark">Entrar</button>
                      </form>
                </div>

            </div>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>
    
<%- include('includes/footer') %>